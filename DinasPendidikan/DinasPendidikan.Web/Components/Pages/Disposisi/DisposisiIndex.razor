@page "/disposisi"

<html>
<head>
    <title>Disposisi</title>
    <link rel="stylesheet" href="css/disposisi.css">
</head>
<body>
    <div class="container">
        <h1>Disposisi</h1>
        <p>Ini adalah halaman disposisi.</p>
        <p>Anda dapat menambahkan, mengedit, dan menghapus disposisi di sini.</p>
        
        <!-- Contoh form untuk menambahkan disposisi -->
        <form>
            <div class="form-group">
                <label for="disposisiTitle">Judul Disposisi:</label>
                <input type="text" id="disposisiTitle" class="form-control" placeholder="Masukkan judul disposisi">
            </div>
            <div class="form-group">
                <label for="disposisiContent">Isi Disposisi:</label>
                <textarea id="disposisiContent" class="form-control" rows="4" placeholder="Masukkan isi disposisi"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Simpan Disposisi</button>
        </form>
    </div>
</body>
</html>