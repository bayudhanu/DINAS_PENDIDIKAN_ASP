<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Header -->
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        <i class="bi bi-envelope-plus text-primary"></i> Regulasi
                    </h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group me-2">
                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-printer"></i> Cetak
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-download"></i> Export
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Filter Section -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form>
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label for="tanggal" class="form-label">Tanggal</label>
                                    <input type="date" class="form-control" id="tanggal">
                                </div>
                                <div class="col-md-3">
                                    <label for="jenis" class="form-label">Jenis</label>
                                    <select class="form-select" id="jenis">
                                        <option selected value="">Semua Jenis</option>
                                        <option>Undang-Undang</option>
                                        <option>Peraturan Pemerintah</option>
                                        <option>Peraturan Menteri</option>
                                        <option>Peraturan Gubernur</option>
                                        <option>Peraturan Daerah</option>
                                        <option>Peraturan Bupati</option>
                                        <option>SK Bupati</option>
                                        <option>SK Kepala Dinas</option>
                                        <option>Lainnya</option>
                                    </select>
                                </div>
                                <div class="col-md-8">
                                    <label for="keyword" class="form-label">Kata Kunci</label>
                                    <input type="text" class="form-control" id="keyword" placeholder="Nomor/Perihal/Asal Surat">
                                </div>
                                <div class="col-md-4 d-flex align-items-end">
                                    <button type="reset" class="btn btn-outline-secondary me-2">
                                        <i class="bi bi-arrow-counterclockwise"></i> Reset
                                    </button>
                                    <button type="submit" class="btn btn-primary me-2">
                                        <i class="bi bi-funnel"></i> Filter
                                    </button>
                                    <button style="margin-left:180px;align:right;" type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#tambahRegulasiModal">
                                        <i class="bi bi-plus-circle"></i> Tambah Regulasi
                                    </button>   
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Surat Masuk Table -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Daftar Regulasi</h5>
                        <div class="text-muted small">
                            Menampilkan 1-10 dari 142 surat
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover surat-table">
                                <thead class="table-light">
                                    <tr>
                                        <th width="50">No</th>
                                        <th width="180">Tanggal</th>
                                        <th width="150">Nomor</th>
                                        <th>Judul</th>
                                        <th width="120">Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>24/05/2023</td>
                                        <td>420/0456/DIKBUD/2023</td>
                                        <td>Dinas Pendidikan Provinsi Jawa Tengah</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary" title="Detail" data-bs-toggle="modal" data-bs-target="#detailSuratModal">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-secondary" title="Download">
                                                <i class="bi bi-download"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>2</td>
                                        <td>23/05/2023</td>
                                        <td>005/PP/2023</td>
                                        <td>Petunjuk Teknis BOS Tahun 2023</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary" title="Detail">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-secondary" title="Download">
                                                <i class="bi bi-download"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>3</td>
                                        <td>22/05/2023</td>
                                        <td>0321/UN37/2023</td>
                                        <td>Universitas Sebelas Maret</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary" title="Detail">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-secondary" title="Download">
                                                <i class="bi bi-download"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>4</td>
                                        <td>20/05/2023</td>
                                        <td>420.1/0789/DIKBUD/2023</td>
                                        <td>Bupati Boyolali</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary" title="Detail">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-secondary" title="Download">
                                                <i class="bi bi-download"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>5</td>
                                        <td>18/05/2023</td>
                                        <td>1234/SMK/2023</td>
                                        <td>SMK Negeri 1 Boyolali</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary" title="Detail">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-secondary" title="Download">
                                                <i class="bi bi-download"></i>
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center mt-3">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">Sebelumnya</a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">4</a></li>
                                <li class="page-item"><a class="page-link" href="#">5</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Selanjutnya</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
        </div>
    </div>
    
    <!-- Modal Tambah Surat -->
    <div class="modal fade" id="tambahRegulasiModal" tabindex="-1" aria-labelledby="tambahRegulasiModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="tambahRegulasiModalLabel">
                        <i class="bi bi-envelope-plus"></i> Tambah Regulasi
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label for="nomor" class="form-label">Nomor</label>
                                <input type="text" class="form-control" id="nomor" required>
                            </div>
                            <div class="col-md-3">
                                <label for="tanggal" class="form-label">Tanggal</label>
                                <input type="date" class="form-control" id="tanggal" required>
                            </div>
                            <div class="col-md-5">
                                <label for="jenis" class="form-label">Jenis</label>
                                <select class="form-select" id="jenis" required>
                                    <option selected value="">Semua Jenis</option>
                                    <option>Undang-Undang</option>
                                    <option>Peraturan Pemerintah</option>
                                    <option>Peraturan Menteri</option>
                                    <option>Peraturan Gubernur</option>
                                    <option>Peraturan Daerah</option>
                                    <option>Peraturan Bupati</option>
                                    <option>SK Bupati</option>
                                    <option>SK Kepala Dinas</option>
                                    <option>Lainnya</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label for="judul" class="form-label">Judul</label>
                                <input type="text" class="form-control" id="judul" required>
                            </div>                          
                            <div class="col-12">
                                <label for="fileRegulasi" class="form-label">Upload File Regulasi</label>
                                <input class="form-control" type="file" id="fileRegulasi" accept=".pdf,.jpg,.jpeg,.png">
                                <div class="form-text">Format file: PDF, JPG, PNG (maks. 5MB)</div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                    <button type="button" class="btn btn-primary">Simpan Surat</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal Detail Surat -->
    <div class="modal fade" id="detailSuratModal" tabindex="-1" aria-labelledby="detailSuratModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="tambahSuratModalLabel">
                        <i class="bi bi-envelope-plus"></i> Detail Regulasi
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label for="nomor" class="form-label">Nomor</label>
                                <input type="text" class="form-control" id="nomor" read>
                            </div>
                            <div class="col-md-4">
                                <label for="tanggal" class="form-label">Tanggal</label>
                                <input type="date" class="form-control" id="tanggal" required>
                            </div>
                            <div class="col-12">
                                <label for="perihal" class="form-label">Perihal</label>
                                <input type="text" class="form-control" id="perihal" required>
                            </div>
                            <div class="col-md-6">
                                <label for="jenis" class="form-label">Jenis</label>
                                <select class="form-select" id="jenisRegulasi" required>
                                    <option value="">Pilih Jenis Regulasi</option>
                                    <option>Surat Undangan</option>
                                    <option>Surat Edaran</option>
                                    <option>Surat Permohonan</option>
                                    <option>Surat Pemberitahuan</option>
                                    <option>Lainnya</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label for="fileSurat" class="form-label">Upload File Surat</label>
                                <input class="form-control" type="file" id="fileSurat" accept=".pdf,.jpg,.jpeg,.png">
                                <div class="form-text">Format file: PDF, JPG, PNG (maks. 5MB)</div>
                            </div>
                            <div class="col-12">
                                <label for="keterangan" class="form-label">Keterangan</label>
                                <textarea class="form-control" id="keterangan" rows="3"></textarea>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                    <button type="button" class="btn btn-primary">Simpan Surat</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal Disposisi Surat -->
    <div class="modal fade" id="disposisiSuratModal" tabindex="-1" aria-labelledby="disposisiSuratModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="disposisiSuratModalLabel">
                        <i class="bi bi-envelope-plus"></i> Disposisi
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label for="nomorSurat" class="form-label">Nomor Surat</label>
                                <input type="text" class="form-control" id="nomorSurat" required>
                            </div>
                            <div class="col-md-4">
                                <label for="ditujukan" class="form-label">Ditujukan</label>
                                <select class="form-select" id="ditujukan" required>
                                    <option value="">Pilih Ditujukan</option>
                                    <option>Sekretaris</option>
                                    <option>Kabid SD</option>
                                    <option>Kabid SMP</option>
                                    <option>Kabid PAUD dan LS</option>
                                    <option>Kabid PPTK</option>
                                    <option>Kasubag UMPEG</option>
                                    <option>Kasubag Keuangan</option>
                                    <option>RENLAP</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="tanggalDisposisi" class="form-label">Tanggal Disposisi</label>
                                <input type="date" class="form-control" id="tanggalDisposisi" required>
                            </div>
                            <div class="col-12">
                                <label for="isiDisposisi" class="form-label">Isi Disposisi</label>
                                <textarea class="form-control" id="isiDisposisi" rows="3"></textarea>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                    <button type="button" class="btn btn-primary">Simpan Disposisi</button>
                </div>
            </div>
        </div>
    </div>
    
    <footer class="footer mt-5">
        <div class="container text-center">
            <span class="text-muted">© 2023 Dinas Pendidikan dan Kebudayaan Kabupaten Boyolali - Sistem Pengarsipan Surat</span>
        </div>
    </footer>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Inisialisasi tooltip
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
            
            // Contoh fungsi untuk menangani klik tombol detail
            document.querySelectorAll('.btn-outline-primary').forEach(button => {
                button.addEventListener('click', function() {
                    // Redirect ke halaman detail surat
                    window.location.href = 'detail-surat-masuk.html';
                });
            });
        });
    </script>
</body>
</html>